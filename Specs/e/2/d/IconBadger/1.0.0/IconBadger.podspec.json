{
  "name": "IconBadger",
  "version": "1.0.0",
  "summary": "Script adding dynamically a badge with a custom text to the app's icon on build time",
  "homepage": "https://github.com/ach-ref/IconBadger",
  "description": "Script written in Swift that prepares the iOS app icon overlay with a ribbon and a given text\nsuch as alpha, beta or version and build numbers",
  "license": {
    "type": "MIT",
    "file": "LICENSE"
  },
  "authors": {
    "Achref Marzouki": "contact@amarzouki.com"
  },
  "social_media_url": "https://amarzouki.com",
  "source": {
    "git": "https://github.com/ach-ref/IconBadger.git",
    "tag": "1.0.0"
  },
  "platforms": {
    "ios": "9.0"
  },
  "swift_versions": "5",
  "preserve_paths": "resources/**/*",
  "requires_arc": true,
  "prepare_command": "swift build -c release && cp -f .build/x86_64-apple-macosx/release/iconBadger resources/bin/iconBadger",
  "swift_version": "5"
}
