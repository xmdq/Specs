{
  "name": "Down",
  "summary": "Blazing fast Markdown rendering in Swift, built upon cmark.",
  "version": "0.11.0",
  "homepage": "https://github.com/johnxnguyen/Down",
  "license": {
    "type": "MIT",
    "file": "LICENSE"
  },
  "authors": {
    "John Nguyen": "polyxo@protonmail.com"
  },
  "source": {
    "git": "https://github.com/johnxnguyen/Down.git",
    "tag": "v0.11.0"
  },
  "source_files": [
    "Sources/Down/{AST,Enums & Options,Extensions,Renderers}/**/*.swift",
    "Sources/cmark/*.{h,c}",
    "Sources/Down/*"
  ],
  "ios": {
    "source_files": "Sources/Down/Views/**",
    "resources": "Sources/Down/Resources/DownView.bundle"
  },
  "osx": {
    "source_files": "Sources/Down/Views/**",
    "resources": "Sources/Down/Resources/DownView.bundle"
  },
  "public_header_files": "Sources/Down/*.h",
  "platforms": {
    "ios": "9.0",
    "tvos": "9.0",
    "osx": "10.11"
  },
  "requires_arc": true,
  "module_name": "Down",
  "preserve_paths": [
    "Sources/cmark/include/module.modulemap",
    "Sources/cmark/*.inc",
    "Sources/cmark/COPYING"
  ],
  "pod_target_xcconfig": {
    "SWIFT_INCLUDE_PATHS": "$(SRCROOT)/Down/Sources/cmark/**"
  },
  "swift_versions": [
    "5.0",
    "5.1"
  ],
  "swift_version": "5.1"
}
