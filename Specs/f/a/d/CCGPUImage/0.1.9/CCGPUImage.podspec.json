{
  "name": "CCGPUImage",
  "version": "0.1.9",
  "summary": "An open source iOS framework for GPU-based image and video processing.",
  "description": "CCGPUImage , An open source iOS framework for GPU-based image and video processing.",
  "homepage": "https://github.com/ccworld1000/CCGPUImage",
  "license": "BSD",
  "authors": {
    "CC (deng you hua)": "ccworld1000@gmail.com"
  },
  "social_media_url": "https://github.com/ccworld1000",
  "platforms": {
    "ios": "9.0",
    "osx": "10.6"
  },
  "source": {
    "git": "https://github.com/ccworld1000/CCGPUImage.git",
    "tag": "0.1.9"
  },
  "source_files": "framework/Source/**/*.{h,m}",
  "exclude_files": "Classes/Exclude",
  "ios": {
    "exclude_files": "framework/Source/Mac",
    "frameworks": [
      "OpenGLES",
      "CoreMedia",
      "QuartzCore",
      "AVFoundation"
    ]
  },
  "osx": {
    "exclude_files": [
      "framework/Source/iOS",
      "framework/Source/GPUImageFilterPipeline.*",
      "framework/Source/GPUImageMovieComposition.*",
      "framework/Source/GPUImageVideoCamera.*",
      "framework/Source/GPUImageStillCamera.*",
      "framework/Source/GPUImageUIElement.*"
    ]
  },
  "resources": "framework/Resources/*.png",
  "requires_arc": true,
  "xcconfig": {
    "CLANG_MODULES_AUTOLINK": "YES"
  }
}
