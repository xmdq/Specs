{
  "name": "Folly-Format",
  "version": "7.1.3",
  "homepage": "https://fmt.dev/latest/index.html",
  "authors": {
    "Pritesh Nandgaonkar": "prit91@fb.com"
  },
  "summary": "{fmt} is an open-source formatting library providing a fast and safe alternative to C stdio and C++ iostreams.",
  "module_name": "fmt",
  "source": {
    "git": "https://github.com/fmtlib/fmt.git",
    "tag": "7.1.3"
  },
  "source_files": [
    "src/*.{h,cc}",
    "include/fmt/*.h"
  ],
  "public_header_files": "include/*/*.h",
  "requires_arc": true,
  "platforms": {
    "ios": "8.0",
    "osx": "10.10"
  },
  "header_mappings_dir": "include/fmt",
  "libraries": "stdc++",
  "header_dir": "fmt",
  "description": "{fmt} is an open-source formatting library providing a fast and safe alternative to C stdio and C++ iostreams.",
  "pod_target_xcconfig": {
    "USE_HEADERMAP": "NO",
    "CLANG_CXX_LANGUAGE_STANDARD": "c++11"
  }
}
